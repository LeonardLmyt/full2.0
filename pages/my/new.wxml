<scroll-view scroll-y style="height:{{windowHeight}}px;" bindscrolltolower="loadMore" bindscroll="scroll" hidden='{{recordshow}}'>
    <view class="content" wx:if="{{!list.length}}">
        <view class='my_last'>
            <image src='/images/icon_per_No content.png '></image>
        </view>
        <view class='nocontent'>你没有任何消息噢！</view>
    </view>
    <view class="content" wx:else>
        <view class="content_sub" wx:for="{{list}}" wx:for-item="item">
            <view class="content_sub_l">
                <image src='{{item.avatar}}'></image>
            </view>
            <view class="content_sub_r">
                <view class="content_sub_c">
                    <view class="sc_t">{{item.author}}
                    </view>
                    <view class="sc_c">{{item.dateline}}</view>
                    <navigator url="/pages/index/index_detail?tid={{item.tid}}">
                        <view class="sc_b">
                            {{item.comment}}</view>
                    </navigator>
                </view>
              
            </view>
    </view>
    </view>
</scroll-view>


<import src="../../libs/public/public.wxml" />
<template is="layer" data="{{layer}}" />