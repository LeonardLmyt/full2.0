page{width: 100%;height: 100%;}
.logo{width: 100%;overflow: hidden;}
.logo image{display:-webkit-box;display:box;width: 167rpx;height: 167rpx;margin:100rpx auto 76rpx;}

.form{box-sizing: border-box;-webkit-box-sizing: border-box;width:92%;overflow:hidden;border: 2rpx solid #ccc;margin: 0 auto;}
.form_sub{display:-webkit-box;display:box;width: 100%;height: 80rpx;-webkit-box-align: center;box-align: center;}
.form_sub:first-child{border-bottom: 2rpx solid #ccc;}
.form_sub image{display:-webkit-box;display:box;width: 32rpx;height: 32rpx;margin: 0 20rpx;}
.form_sub input{display:-webkit-box;display:box;-webkit-box-flex: 1.0;box-flex: 1.0;}
.input_class{font-size:26rpx;color: #aaaaaa;}


.validate{position: relative;width: 670rpx;margin: 50rpx auto 0;height: 28px;}
.validate_sub{display: -webkit-box;display:box;width: 100%;height: 28px;-webkit-box-align:center;box-align:center;}
.validate_text{box-sizing: border-box;-webkit-box-sizing: border-box;display: -webkit-box;display:box;background-color: #EDE4DD;border:2rpx solid #C1BAB4;border-radius:30px;-webkit-border-radius:30px;font-size: 12px;color: #647989;height: 28px;line-height: 26px;width: 280px;-webkit-box-pack: end;box-pack: end;box-shadow: inset 0 3rpx 3rpx #C1BAB4;}
.validate_text text{margin-right:20px;}
.validate_sub image{display: -webkit-box;display:box;width: 23px;height: 23px;margin-left: 43rpx;}
.slide{position:absolute;top: -5px;left: -5px;width: 38px;height: 38px;padding-right:50px;}
.validate_img{position: absolute;top:-150px;left: 0;width:280px;height: 140px;z-index: 10;}
.validate_img_nav{position: relative;width: 100%;overflow: hidden;}
.validate_img_main{width:280px;height: 140px; }
.validate_img_sub{position: absolute;top: 0;left: 0;width: 53px;height: 140px;}
.submit{width: 92%;height: 88rpx;line-height: 88rpx;background-color: #548FFB;border: none;color: #fff;margin-top: 60rpx;}