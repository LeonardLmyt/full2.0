page{width: 100%;height: 100%;background-color: #F2F2F2;}
.content{width: 100%;height: 100%;}
.main{width: 100%;overflow: hidden;}
.main_sub{box-sizing: border-box;-webkit-box-sizing: border-box;width: 100%;overflow: hidden;background-color: #fff;padding: 0 30rpx 0 30rpx;}
.main_sub:nth-child(1){height: 450rpx;margin-bottom: 30rpx;padding: 0;}
.main_sub:last-child{padding-bottom: 30rpx;}


.cover{position: relative;width: 100%;height: 100%;}
.cover image{width: 100%;height: 100%;}
.cover_title{position: absolute;bottom: 0;left: 0;right: 0;background-color: rgba(0,0,0,0.13);color: #fff;width: 92%;padding: 0 40rpx;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;height: 70rpx;line-height: 70rpx;border-top:1rpx solid #ccc;}

.section{width: 100%;overflow: hidden;padding-top: 40rpx;}
.message{padding-top: 0 !important;}
.section_top{width: 100%;overflow: hidden;}
.section_top image{width:690rpx;padding-bottom: 30rpx;}
.section_buttom{width: 100%;overflow: hidden;font-size: 32rpx;text-align: justify;color:#333333;}

.button{position: fixed;bottom: 0;left: 0;display: -webkit-box;display: box;-webkit-box-pack: justify;box-pack: justify;width: 100%;overflow: hidden;}
.button view{display: -webkit-box;display: box;width: 50%;height: 100rpx;line-height: 100rpx;margin: 0;color: #ffffff;text-align:-webkit-center;font-size: 32rpx;}
.submit{background-color: #5d5f64;}
.addImg{background-color: #548ffb;}