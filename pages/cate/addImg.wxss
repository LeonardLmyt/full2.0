page{width: 100%;background-color: #F2F2F2;}
.content{width: 100%;}
.main{width: 100%;overflow: hidden;}
.main_sub{width: 100%;height: 240rpx;background-color: #fff;margin-bottom: 4rpx;}
.main_sub:nth-child(1){height: 400rpx;margin-bottom: 30rpx;}
.main_sub:last-child{margin-top: 20rpx;}

.addImg{width: 100%;height: 100%;display: -webkit-box;display: box;-webkit-box-orient: vertical;box-orient: vertical;-webkit-box-align: center;box-align: center;-webkit-box-pack: center;box-pack: center;}
.addImg view:first-child{width: 58rpx;height: 58rpx;background-image: url(data:image/png;base64,);background-size: 100% 100%;-webkit-background-size: 100% 100%;}
.addImg view:last-child{color: #aaaaaa;font-size: 28rpx;margin-top: 40rpx;}

.cover{position: relative;width: 100%;height: 100%;}
.cover image{width: 100%;height: 100%;}
.cover_title{position: absolute;bottom: 0;left: 0;right: 0;background-color: rgba(0,0,0,0.13);color: #fff;width: 92%;padding: 0 40rpx;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;height: 70rpx;line-height: 70rpx;}
.cover_edit{position: absolute;bottom: 86rpx;right: 28rpx;background: rgba(73, 136, 251,0.7);font-size: 24rpx;border-radius: 30rpx;-webkit-border-radius: 30rpx;width: 116rpx;height: 42rpx;line-height: 42rpx;text-align:center;color: #fff;}


.section{display: -webkit-box;display: box;box-sizing: border-box;-webkit-box-sizing: border-box;width: 100%;height: 100%;overflow: hidden;padding: 34rpx 16rpx 34rpx 30rpx;}
.section_left{position: relative;width: 229rpx;overflow: hidden;}
.section_left image{width: 229rpx;height: 172rpx;border-radius: 10rpx;-webkit-border-radius: 10rpx;}
.section_content{-webkit-box-flex: 1.0;box-flex: 1.0;margin:0 28rpx;}
.section_content textarea{width: 100%;height: 172rpx;color:#333333;font-size: 28rpx;}
.section_right{display: -webkit-box;display: box;width: 32rpx;-webkit-box-orient: vertical;box-orient: vertical;-webkit-box-pack: justify;box-pack: justify;}
.section_right .up{width: 32rpx;height: 32rpx;background-image:url(data:image/png;base64,);background-size: 100% 100%;-webkit-background-size: 100% 100%;}
.section_right .down{width: 32rpx;height: 32rpx;background-image:url(data:image/png;base64,);background-size: 100% 100%;-webkit-background-size: 100% 100%;}

.section_del{position:absolute;top:0;left: 0;width: 50rpx;height: 50rpx;background-image: url(data:image/png;base64,);background-size: 100% 100%;-webkit-background-size: 100% 100%;}


.operate{position: fixed;left: 0;bottom: 0;right: 0;overflow: hidden;width: 100%;z-index: 100;height: 98rpx;}
.release{width: 100%;background-color: #c4c4c4;border-radius: 0;-webkit-border-radius: 0;height: 98rpx;line-height: 98rpx;font-size: 36rpx;color: #fff;}
.release:after{content:none;}
.release_ok{background-color: #548FFB;}