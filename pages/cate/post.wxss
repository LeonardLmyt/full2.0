page{background-color: #f7f8fb;width: 100%;height: 100%;}
.content{display: block;width: 100%;overflow: hidden;margin-top: 20rpx;}
.message_main{width:100%;overflow: hidden;background-color: #fff;}
.message_main input{width: 94%;padding: 25rpx 3%;font-size: 34rpx}
.message{position: relative;width: 94%;padding: 20rpx 3% 30rpx 3%;border-top:1px solid #e7e7e7;}
.message textarea{width: 100%;min-height: 400rpx;color: #333;margin-bottom: 20rpx;font-size: 30rpx}
.input{position: absolute;bottom: 20rpx;right: 40rpx;font-size: 26rpx;color: #aaaaaa;}

.button{position: fixed;bottom: 0;left: 0;display: -webkit-box;display: box;-webkit-box-pack: justify;box-pack: justify;width: 100%;overflow: hidden;}
.button view{display: -webkit-box;display: box;width: 50%;height: 100rpx;line-height: 100rpx;margin: 0;color: #ffffff;text-align:-webkit-center;font-size: 32rpx;}
.submit{background-color: #5d5f64;}
.addImg{background-color: #548ffb;}

