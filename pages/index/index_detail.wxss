/**content.wxss**/

page {
  background: #fff;
}

.article {
  background: #fff;
  height: 100%;
}

.article-header {
  padding: 28rpx 30rpx 30rpx 30rpx;
  border-bottom: 20rpx solid #f7f8fb;
}

.article-title {
  font-size: 44rpx;
  color: #333;
  line-height: 60rpx;
}

.article-meta {
  display: flex;
  padding-top: 22rpx;
  line-height: 58rpx;
}

.article-author {
  display: flex;
}

.edit {
  width: 120rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  border: 2rpx solid #4988fb;
  font-size: 28rpx;
  color: #4988fb;
  border-radius: 30rpx;
  -webkit-border-radius: 30rpx;
}

.article-author--avatar {
  width: 58rpx;
  height: 58rpx;
  -webkit-border-radius: 100%;
  border-radius: 100%;
}

.article-author--name {
  font-size: 28rpx;
  color: #5e7290;
  margin-left: 8rpx;
}

.article-views {
  font-size: 24rpx;
  color: #999;
  -webkit-flex-grow: 1;
  flex-grow: 1;
}

.icon_time {
  background: url(data:image/png;base64,) no-repeat 0 50%;
  background-size: 34rpx auto;
  padding-left: 45rpx;
  margin-left: 20rpx;
  display: inline;
}

.icon_look {
  background: url(data:image/png;base64,) no-repeat 0 50%;
  background-size: 34rpx auto;
  padding-left: 45rpx;
  margin-left: 20rpx;
  display: inline;
}

.comment-list>view:first-child {
  border-bottom: 20rpx solid #f7f8fb;
}

.comment-item {
  padding: 20rpx 30rpx;
}

.comment-meta {
  display: flex;
  line-height: 48rpx;
}

.comment-author {
  width: 100%;
  display: flex;
  line-height: 58rpx;
}

.comment-author--avatar {
  width: 58rpx;
  height: 58rpx;
  -webkit-border-radius: 100%;
  border-radius: 100%;
}

.comment-author--name {
  -webkit-flex-grow: 1;
  flex-grow: 1;
  font-size: 28rpx;
  color: #4988fb;
  margin-left: 20rpx;
}

.comment_time {
  color: #999;
  font-size: 22rpx;
}

.post-message {
  font-size: 34rpx;
  color: #333;
  margin-top: 10rpx;
  line-height: 65rpx;
}


.article-comment view:not(:first-child) .post-message{margin-left: 79rpx;} 
.post-message image {
  max-width: 100%;
  width: 100%;
  height: auto;
  margin: 20rpx 0px;
  display: block;
}

.comment-time {
  margin-top: 10rpx;
  color: #666;
  font-size: 24rpx;
}

.loadmore {
  font-size: 26rpx;
  color: #aaa;
  padding: 28rpx 0px;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}

.repl-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  -webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  -moz-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
}

.repl-header {
  display: flex;
  align-items: flex-end;
  -webkit-align-items: flex-end;
}

.repl-header--close {
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #a2aeb3;
  font-size: 28rpx;
  text-align: center;
}

.repl-header--title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  line-height: 2.5;
  padding-bottom: 15rpx;
}

.button-send {
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
  padding: 0;
  color: #72abdf;
  font-size: 34rpx;
  z-index: 100;
  background-color: transparent !important;
}

.button-send:after {
  border: 0 none;
}

.repl-ipt {
  padding: 0 20rpx 20rpx 20rpx;
  display: flex;
}

.message {
  position: relative;
  border: 2rpx solid #91a9e4;
  width: 100%;
  padding: 28rpx;
  border-radius: 6rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 40rpx;
}

/*place*/

.place {
  display: -webkit-box;
  display: box;
  padding: 10rpx 20rpx;
  overflow: hidden;
  -webkit-box-align: center;
  box-align: center;
}

.place-text {
  display: -webkit-box;
  display: box;
  -webkit-box-flex: 1.0;
  box-flex: 1.0;
  border: 2rpx solid #ccc;
  color: #ccc;
  border-radius: 6rpx;
  font-size: 30rpx;
  padding: 12rpx 28rpx;
  line-height: 44rpx;
  height: 44rpx;
}

.message_icon {
  display: -webkit-box;
  display: box;
  width: 190rpx;
  -webkit-box-pack: justify;
  box-pack: justify;
  margin: 0 80rpx 0 60rpx;
  height: 64rpx;
}

.message_icon_sub {
  position: relative;
  display: -webkit-box;
  display: box;
  width: 60rpx;
  font-size: 24rpx;
  color: #969fa8;
  -webkit-box-align: center;
  box-align: center;
  text-align: center;
  -webkit-box-pack: justify;
  box-pack: justify;
  margin: 0;
  padding: 0;
  background-color: transparent !important;
  line-height: initial;
}

.message_icon_sub image {
  display: -webkit-box;
  display: box;
  width: 60rpx;
  height: 60rpx;
}

.message_icon_sub text {
  display: -webkit-box;
  display: box;
  width: 100%;
  text-align: -webkit-center;
}

.message_icon button::after {
  position: relative;
  border: 0;
}

.message_icon button image {
  width: 48rpx;
  height: 48rpx;
}

.ture {
  width: 24rpx;
  height: 24rpx;
  border-right: 1px solid #ccc;
  border-top: 1px solid #ccc;
  -webkit-transform: rotate(-135deg);
  transform: rotate(-135deg);
  margin: 12rpx;
}

.shu {
  height: 30rpx;
  line-height: 30rpx;
  color: #fff;
  text-align: center;
  background-color: #f00;
  border-radius: 40rpx;
  position: absolute;
  left: -8rpx;
  top: -2rpx;
  font-size: 20rpx;
  transform: translateX(50rpx);
  -webkit-transform: translateX(50rpx);
  padding: 0 10rpx;
}

/*post_tow*/

.post_tow {
  position: fixed;
  right: 4%;
  bottom: 20%;
  z-index: 100;
}

.post_tow image {
  width: 55px;
  height: 55px;
}

/*collection*/

.collection {
  position: fixed;
  bottom: 150rpx;
  left: 225rpx;
  width: 260rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 20rpx;
  border-radius: 8rpx;
  -webkit-border-radius: 8rpx;
  opacity: 0;
  transition: all 0.3s;
  -webkit-transition: all 0.3s;
  pointer-events: none;
}

.collection_sub {
  display: -webkit-box;
  display: box;
}

.collection_left {
  -webkit-box-flex: 1.0;
  box-flex: 1.0;
  text-align: center;
  border-right: 1rpx solid #fff;
}

.collection_right {
  padding-left: 20rpx;
}

.collection_animation {
  opacity: 1;
  pointer-events: all;
}

.hide {
  display: none;
}

.show {
  display: block;
}
